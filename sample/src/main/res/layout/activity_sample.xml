<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#555"
    tools:context=".SampleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#555"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <cn.refactor.library.ShapeImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@mipmap/c"
            app:backgroundColor="@color/colorPrimary"
            app:shape="Circle"
            app:textSize="20sp"
            app:textColor="#fff"
            app:borderWidth="4dp"
            app:borderColor="@android:color/white"/>

        <cn.refactor.library.ShapeImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:src="@mipmap/d"
            app:shape="Circle"
            app:borderColor="@android:color/white"/>

        <cn.refactor.library.ShapeImageView
            android:id="@+id/siv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@mipmap/b"/>

        <cn.refactor.library.ShapeImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:src="@mipmap/a"
            app:backgroundColor="@android:color/black"
            app:shape="RoundRectangle"
            app:radius="12dp"
            app:borderWidth="2dp"
            app:borderColor="@android:color/holo_orange_dark"/>

        <cn.refactor.library.ShapeImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:backgroundColor="@color/colorPrimary"
            app:shape="Rectangle"
            app:text="Rectangle"
            app:textColor="@android:color/white"
            app:textSize="20sp"
            app:textStyle="bold_italic"
            app:borderWidth="3dp"
            app:borderColor="@color/colorAccent"/>

        <cn.refactor.library.ShapeImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:src="@mipmap/c"
            app:backgroundColor="@android:color/holo_blue_dark"
            app:shape="RoundRectangle"
            app:text="RoundRectangle"
            app:radius="10dp"
            app:textSize="22sp"
            app:textColor="#fff"
            app:textStyle="normal"
            app:borderColor="@android:color/white"/>

    </LinearLayout>

</ScrollView>
